<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <gradient
        android:startColor="#C3B5F4"
        android:endColor="#FFFFFF"
        android:type="linear"
        android:angle="90" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#3C2F49" /> <!-- Set border color and width here -->

    <!-- Corner radius -->
    <corners android:radius="10dp" /> <!-- Set corner radius here -->
</shape>

